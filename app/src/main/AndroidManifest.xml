<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.universalconverter" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BMI"
            android:label="@string/title_activity_bmi"
            android:parentActivityName=".HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.universalconverter.HomePage" />
        </activity>
        <activity
            android:name=".Temp"
            android:label="@string/title_activity_temp"
            android:parentActivityName=".HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.universalconverter.HomePage" />
        </activity>
        <activity
            android:name=".EMI"
            android:label="Calculate EMI"
            android:parentActivityName=".HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.universalconverter.HomePage" />
        </activity>
        <activity
            android:name=".UnitConversion"
            android:label="@string/title_activity_unit_conversion"
            android:parentActivityName=".HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.universalconverter.HomePage" />
        </activity>
    </application>

</manifest>
